{
  "languages": {
    "zh": {
      "inputFile": "zh/README.md",
      "outputFile": "zh/obsidian-cheatsheet_zh.pdf"
    },
    "en": {
      "inputFile": "en/README.md",
      "outputFile": "en/obsidian-cheatsheet_en.pdf"
    },
    "de": {
      "inputFile": "de/README.md",
      "outputFile": "de/obsidian-cheatsheet_de.pdf"
    }
  },
  "pdfOptions": {
    "stylesheet": [
      "https://cdn.jsdelivr.net/npm/github-markdown-css/github-markdown.min.css"
    ],
    "body_class": "markdown-body",
    "css": "body { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Noto Sans', sans-serif; } .markdown-body { max-width: 100%; margin: 0 auto; padding: 2rem; } :lang(zh) { font-family: 'Noto Sans SC', sans-serif; }",
    "pdf_options": {
      "format": "A4",
      "margin": "20mm",
      "printBackground": true
    },
    "highlight_style": "github"
  }
} 